# ===========================================
# DAFC OTB Platform - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/dafc_otb?schema=public"

# NextAuth / Auth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-at-least-32-characters"
AUTH_SECRET="your-super-secret-key-at-least-32-characters"

# Application
NEXT_PUBLIC_APP_NAME="DAFC OTB Planning"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Anthropic (Claude AI)
ANTHROPIC_API_KEY=""

# Redis (optional)
REDIS_URL="redis://localhost:6379"

# Sentry (optional)
SENTRY_DSN=""

# Email (optional)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
EMAIL_FROM="DAFC OTB <otb@dafc.com>"

# Logging
LOG_LEVEL="info"

# Feature Flags
ENABLE_AI_FEATURES="true"
ENABLE_EMAIL_NOTIFICATIONS="true"
ENABLE_RATE_LIMITING="true"
